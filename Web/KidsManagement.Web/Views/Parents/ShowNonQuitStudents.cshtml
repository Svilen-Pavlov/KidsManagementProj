@using KidsManagement.ViewModels.Students;

@model AllStudentsDetailsViewModel;
@{
    ViewData["Title"] = "Details";
}
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">List of Children</h1>
        <div >
            <p style="text-align: center">
                Deleting a parent is only possible when all of their children have been deleted as well.
                <br />The following students have a different status than Quit (Deleted) and need to be managed first:
            </p>
        </div>
        <div>
            <table class="table" style="text-align: center">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Age</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students.OrderBy(x => x.Id))
                    {
                        <tr>
                            <th scope="row">@student.Id</th>
                            <td>@student.FullName</td>
                            <td>@student.Gender</td>
                            <td>@student.Age</td>
                            <td>@student.Status</td>
                            <td>
                                <div class="button-holder">
                                    <a href="/Students/Details?studentId=@student.Id" class="btn btn-info text-uppercase">Manage</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</section>

