@using KidsManagement.ViewModels.Parents;
@using KidsManagement.Data.Models.Enums;

@model CreateEditParentInputModel;
@{
    ViewData["Title"] = "Details";
}

<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Add New Parent</h1>
        <div style="padding: 5%;">

            <form enctype="multipart/form-data" method="post" asp-action="Create">
                <div class="form-group col-md-6">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" type="text" class="form-control" id="FirstName" name="FirstName" placeholder="FirstName...">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" type="text" class="form-control" id="LastName" name="LastName" placeholder="LastName">
                </div>
                <div class="form-group col-md-6">
                    <label for="Gender">Gender</label>
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="0888...">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="AlternativePhoneNumber"></label>
                    <input asp-for="AlternativePhoneNumber" type="text" class="form-control" id="AlternativePhoneNumber" name="AlternativePhoneNumber" placeholder="0888...">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" id="Email" name="Email">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="AlternativeEmail"></label>
                    <input asp-for="AlternativeEmail" type="email" class="form-control" id="AlternativeEmail" name="AlternativeEmail">
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="InitialAdminNote"></label>
                    <input asp-for="InitialAdminNote" type="text" class="form-control" id="InitialAdminNote" name="InitialAdminNote" placeholder="Comments...">
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProfileImage" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        @*<span asp-validation-for="ProfileImage" class="text-danger"></span>* apply this@
                @*this indian guy carried me https://www.c-sharpcorner.com/article/upload-and-display-image-in-asp-net-core-3-1/*@
                    </div>
                </div>
                <hr />
                <input type="submit" class="form-control button btn-info col-md-6" value="Create" />
            </form>
        </div>
    </div>
</section>