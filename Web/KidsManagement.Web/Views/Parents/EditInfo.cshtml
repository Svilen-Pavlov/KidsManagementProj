@using KidsManagement.ViewModels.Parents;
@using KidsManagement.Data.Models.Enums;

@model CreateEditParentInputModel;
@{
    ViewData["Title"] = "Edit";
}

<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Edit Info</h1>
        <div style="padding: 5%;">

            <form enctype="multipart/form-data" method="post" asp-action="EditInfo">
                <div class="form-row">
                    <div class="form-col row-md-6">
                        <div class="form-group row-md-6">
                            <label asp-for="FirstName"></label>
                            <input asp-for="FirstName" type="text" class="form-control" id="FirstName" name="FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="LastName"></label>
                            <input asp-for="LastName" type="text" class="form-control" id="LastName">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="Gender">Gender</label>
                            <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="PhoneNumber"></label>
                            <input asp-for="PhoneNumber" type="text" class="form-control" id="PhoneNumber" name="PhoneNumber">
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="AlternativePhoneNumber"></label>
                            <input asp-for="AlternativePhoneNumber" type="text" class="form-control" id="AlternativePhoneNumber" name="AlternativePhoneNumber">
                            <span asp-validation-for="AlternativePhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" type="email" class="form-control" id="Email" name="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="AlternativeEmail"></label>
                            <input asp-for="AlternativeEmail" type="email" class="form-control" id="AlternativeEmail" name="AlternativeEmail">
                            <span asp-validation-for="AlternativeEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group row-md-6">
                            <div class="form-group">
                                <label asp-for="ProfileImage" class="control-label"></label>
                                <div class="custom-file">
                                    <input asp-for="ProfileImage" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>
                @*this indian guy carried me https://www.c-sharpcorner.com/article/upload-and-display-image-in-asp-net-core-3-1/*@
                            </div>
                        </div>
                        <hr />
                        <input type="submit" class="form-control button btn-info" value="Edit" />
                    </div>
                    <div class="container-fluid col-md-6">
                        <div class="form-group row-md-6">
                            <img src="@Model.ProfilePicURI" class="img-fluid d-block mt-2 mr-auto ml-auto" align="middle" width="400" height="400">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>