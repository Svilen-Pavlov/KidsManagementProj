@using KidsManagement.ViewModels.Groups;
@using KidsManagement.Data.Models.Enums;

@model CreateEditGroupInputModel;
@{
    ViewData["Title"] = "Edit";
}
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Edit Info</h1>
        <div style="padding: 5%;">

            <form enctype="multipart/form-data" method="post" asp-action="EditInfo">
                <div class="form-row">
                    <div class="form-col row-md-6">
                        <div class="form-group row-md-6">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" type="text" class="form-control" id="Name" name="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="AgeGroup"></label>
                            <select asp-for="AgeGroup" asp-items="Html.GetEnumSelectList<AgeGroup>()" class="form-control"></select>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="StartDate"></label>
                            <input asp-for="StartDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" id="StartDate">
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="EndDate"></label>
                            <input asp-for="EndDate" type="date" asp-format="{0:yyyy-MM-dd}" class="form-control" id="EndDate">
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="StartTime"></label>
                            <input asp-for="StartTime" type="time" class="form-control" id="StartTime">
                            <span asp-validation-for="StartTime" class="text-danger"></span>
                        </div>
                        <div class="form-group row-md-6">
                            <label asp-for="Duration"></label>
                            <input asp-for="Duration" type="number" class="form-control" id="Duration">
                            <span asp-validation-for="Duration" class="text-danger"></span>
                        </div>
                        <hr />
                        <input type="submit" class="form-control button btn-info" value="Edit" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>