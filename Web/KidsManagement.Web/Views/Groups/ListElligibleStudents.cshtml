@using KidsManagement.ViewModels.Students;

@model AllStudentsDetailsViewModel;
@{
    ViewData["Title"] = "Add Students";
}
<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">Elligible Students - @this.ViewData["freeStudentSlots"] free spots left </h1>
        <div>
            <div class="button-holder align-self-center">
                <a href="/Groups/Details?groupId=@this.ViewData["groupId"]" class="btn btn-info">Back to Group</a>
            </div>
            <table class="table">
                <thead class="thead-dark" style="text-align: center">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">FullName</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Age</th>
                        <th scope="col">Status</th>
                        <th scope="col">Choose Student</th>
                    </tr>
                </thead>
                <tbody style="text-align: center">
                    @foreach (var student in Model.Students.OrderBy(x => x.Id))
                    {
                        <tr>
                            <th scope="row">@student.Id</th>
                            <td>@student.FullName</td>
                            <td>@student.Gender</td>
                            <td>@student.Age</td>
                            <td>@student.Status</td>
                            <td>
                                <div class="button-holder">
                                    <a href="/Groups/AddStudents?studentId=@student.Id" class="btn btn-info">Add Student to Group</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</section>